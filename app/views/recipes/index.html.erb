<div class="container my-4">
  <div class="row g-3">
    <!-- Recipe Title Card -->
    <% @recipes.each do |recipe| %>
      <% if recipe.role == "assistant" %>
        <% md = recipe.content %>
        <% title = md[/^#\s+(.*)/, 1] %>
        <% if title.present? %>
          <div class="col-12 col-md-6 col-lg-4">
            <div class="recipe-title-card">
              <%= title %>
            </div>
          </div>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>
