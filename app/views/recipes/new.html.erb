<div class="recipe-generator-wrapper py-5">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-8">
        <div class="generator-card p-4 shadow-sm">
          <h1 class="text-center mb-4 h1custom">
            Trouve une idée de recette
          </h1>

          <div class="d-flex align-items-center mb-3 p-2 fridge-info">

            <%= image_tag 'fridge.png', class: 'fridge-avatar', alt: 'Image recette' %>
            <p class="description m-0">Rentre les ingrédients que tu as dans ton frigo, patientes quelques secondes.. </p>

          </div>

          <div class="d-flex align-items-center mb-3 p-2 fridge-info">

            <%= image_tag 'recipe.png', class: 'recipe-avatar', alt: 'Image recette' %>
            <p class="description m-0">Suis la recette fournie par <strong> Frigo-futé</strong></p>

          </div>

          <div class="d-flex align-items-center mb-3 p-2 fridge-info">

            <%= image_tag 'plat.png', class: 'plat-avatar', alt: 'Image recette' %>
            <p class="description m-0">Et hop ! voici un plat créé sur mesure </p>

          </div>

          <%= simple_form_for @recipe do |f| %>
            <div class="form-group mb-3">
              <%= f.label :content, "Ingrédients:", class: "form-label fw-bold" %>
              <%= f.input_field :content,
                    as: :text,
                    class: "form-control ingredient-input",
                    placeholder: "Ex: poulet, tomates, ail, pâtes...",
                    required: true,
                    rows: 6 %>
            </div>
            <div class="text-center w-100">
              <%= f.button :submit, "Imaginer un plat", id: "btn-submit", class: "w-100"%>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
