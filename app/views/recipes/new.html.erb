<div class="recipe-generator-wrapper py-5">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-8">
        <div class="generator-card p-4 shadow-sm">
          <h1 class="text-center mb-4 h1custom">
            Trouve une idée de recette
          </h1>
          <p class="text-muted text-center mb-4">
            Rentre les ingrédients que tu veux utiliser, et on te proposera un plat adapté!
          </p>
          <%= simple_form_for @recipe do |f| %>
            <div class="form-group mb-3">
              <%= f.label :content, "Ingrédients:", class: "form-label fw-bold" %>
              <%= f.input_field :content,
                    as: :text,
                    class: "form-control ingredient-input",
                    placeholder: "Ex: poulet, tomates, ail, pâtes...",
                    required: true,
                    rows: 6 %>
            </div>
            <div class="text-center">
              <%= f.button :submit, "Imaginer un plat", class: "btn btn-success btn-lg px-4" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
